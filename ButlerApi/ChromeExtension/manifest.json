{
    "manifest_version": 2,
    "name": "My Extension",
    "description": "This extension highlights elements and prints their bounding box when clicked",
    "version": "1.0",
    "permissions": ["webNavigation", "<all_urls>", "activeTab", "storage", "clipboardWrite", "tabs"],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
